<!DOCTYPE Level SYSTEM "../Levels.dtd">
<Level>
  <Entity name="respawn_spot_base" abstract="true">
    <Attributes>
      <Attribute name="alpha" template="float" value="0.5"/>
      <Attribute name="color" template="float3" value="0.25 0.25 0.33"/>
    </Attributes>
  </Entity>
  
  <Entity name="snow_base" abstract="true">
    <Attributes>
      <Attribute name="particles_per_second" template="float" value="30"/>
