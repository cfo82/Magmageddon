      <Attribute name="max_alpha" template="float" value="0.75"/>
      <Attribute name="base_size" template="float" value="5"/>
      <Attribute name="random_size_modification" template="float" value="8"/>
      <Attribute name="melting_start" template="float" value="600"/>
      <Attribute name="melting_end" template="float" value="100"/>
    </Attributes>
  </Entity>
  
  <Entity name="fog_base" abstract="true">
