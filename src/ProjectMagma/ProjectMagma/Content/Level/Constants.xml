<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE Level SYSTEM "Levels.dtd">
<Level>

  <!-- constants -->

  <Entity name="constants">
    <Attributes>
      <Attribute name="gravity_acceleration" template="float3" value="0 -900 0"/>
      <Attribute name="max_gravity_speed" template="float" value="450"/>
    </Attributes>
  </Entity>
  
  <Entity name="player_constants" extends="constants">
    <Attributes>
      <Attribute name="respawn_time" template="int" value="1000"/>
      <Attribute name="respawn_min_distance_to_players" template="float" value="150"/>

      <Attribute name="max_health" template="int" value="100"/>
      <Attribute name="max_energy" template="int" value="100"/>
      <Attribute name="max_fuel" template="int" value="2500"/>

      <Attribute name="lava_damage_per_second" template="int" value="200"/>
      <Attribute name="energy_recharge_interval" template="int" value="200"/>

      <Attribute name="fuel_recharge_multiplier" template="float" value="1.2"/>
      <Attribute name="fuel_recharge_multiplier_island" template="float" value="4"/>
      <Attribute name="max_jetpack_speed" template="float" value="200"/>
      <Attribute name="jetpack_acceleration" template="float3" value="0 1600 0"/>

      <Attribute name="ice_spike_aim_angle" template="float" value="90"/>
      <Attribute name="ice_spike_energy_cost" template="int" value="14"/>
      <Attribute name="ice_spike_damage" template="int" value="10"/>
      <Attribute name="ice_spike_freeze_time" template="int" value="2500"/>
      <Attribute name="ice_spike_cooldown" template="int" value="500"/>
      <Attribute name="ice_spike_initial_speed_multiplier" template="float3" value="140 300 140"/>
      <Attribute name="ice_spike_max_speed" template="float" value="440"/>
      <Attribute name="ice_spike_gravity_acceleration" template="float3" value="0 -200 0"/>
      <Attribute name="ice_spike_homing_acceleration" template="float" value="5000"/>
      <Attribute name="ice_spike_uniform_acceleration" template="float" value="1000"/>
      <Attribute name="ice_spike_lifetime" template="int" value="6000"/>
      <Attribute name="ice_spike_death_timeout" template="int" value="3500"/>

      <Attribute name="flamethrower_warmup_time" template="int" value="600"/>
      <Attribute name="flamethrower_warmup_energy_cost" template="int" value="20"/>
      <Attribute name="flamethrower_energy_per_second" template="int" value="5"/>
      <Attribute name="flamethrower_cooldown_time" template="int" value="400"/>
      <Attribute name="flamethrower_turn_flame_increase" template="float" value="1"/>
      <Attribute name="flamethrower_turn_scale" template="float" value="0.6"/>
      <Attribute name="flamethrower_damage_per_second" template="int" value="10"/>

      <Attribute name="hit_damage" template="int" value="20"/>
      <Attribute name="hit_cooldown" template="int" value="250"/>
      <Attribute name="hit_pushback_velocity_multiplier" template="float" value="200"/>
      <Attribute name="player_pushback_deacceleration" template="float" value="300"/>
      <Attribute name="player_pushback_velocity_multiplier" template="float" value="120"/>

      <Attribute name="island_aim_angle_eps" template="float" value="0.2"/>
      <Attribute name="island_aim_angle" template="float" value="180"/>
      <Attribute name="island_reselection_max_value" template="float" value="0.9"/>
      <Attribute name="island_reselection_timeout" template="float" value="60"/>
      <Attribute name="island_deselection_timeout" template="float" value="200"/>
      <Attribute name="island_jump_arc_height" template="float" value="20"/>
      <Attribute name="island_jump_speed" template="float" value="900"/>
      <Attribute name="island_jump_destination_radius" template="float" value=".1"/>
      <Attribute name="island_attraction_jump_range" template="float" value="200"/>

      <Attribute name="island_repulsion_velocity_multiplier" template="float" value="50"/>
      <Attribute name="island_repulsion_fuel_cost" template="int" value="80"/>
      <Attribute name="island_repulsion_recharge_delay" template="float" value="1800"/>

      <Attribute name="x_axis_movement_multiplier" template="float" value="140"/>
      <Attribute name="z_axis_movement_multiplier" template="float" value="140"/>
      <Attribute name="x_axis_jetpack_multiplier" template="float" value="200"/>
      <Attribute name="z_axis_jetpack_multiplier" template="float" value="200"/>
    </Attributes>
  </Entity>

  <Entity name="island_constants" extends="constants">
    <Attributes>
      <!-- physical islands -->
      <Attribute name="random_strength" template="float" value="1200"/>
      <Attribute name="max_velocity" template="float" value="100"/>
      <Attribute name="damping" template="float" value="0.001"/>

      <Attribute name="pillar_elasticity" template="float" value="0.1"/>
      <Attribute name="pillar_attraction" template="float" value="0.0001"/>
      <Attribute name="pillar_repulsion" template="float" value="0.03"/>

      <!-- circular moving islands-->
      <Attribute name="angle_speed" template="float" value="0.6"/>
      <Attribute name="contact_pushback_multiplier" template="float" value="200"/>

      <!-- all islands -->          
      <Attribute name="sinking_speed" template="float" value="8.0"/>    
      <Attribute name="rising_speed" template="float" value="40.0"/>
      <Attribute name="rising_delay" template="int" value="100"/>
      <Attribute name="repositioning_speed" template="float" value="120" />

      <Attribute name="scale_health_multiplier" template="float" value="1.8"/>

      <Attribute name="repulsion_deacceleration" template="float" value="900"/>
      <Attribute name="collision_damping" template="float" value="0.8"/>

      <Attribute name="attraction_acceleration" template="float" value="400"/>
      <Attribute name="attraction_max_speed" template="float" value="200"/>
      <Attribute name="attraction_timeout" template="float" value="2000"/>
    </Attributes>
  </Entity>

  <Entity name="powerup_constants" extends="constants">
    <Attributes>
      <Attribute name="respawn_min_time" template="float" value="5000"/>
      <Attribute name="respawn_random_time" template="float" value="10000"/>

      <Attribute name="respawn_min_distance_to_players" template="float" value="200"/>
    </Attributes>
  </Entity>

</Level>