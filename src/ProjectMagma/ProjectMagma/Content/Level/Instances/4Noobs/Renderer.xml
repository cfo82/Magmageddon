<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE Level SYSTEM "../../Common/Levels.dtd">
<Level>

  <Includes>
    <Include name="Level\Common\Renderer\Templates.xml"/>
  </Includes>

  <Entity name="respawn_spot" extends="respawn_spot_base">
  </Entity>

  <Entity name="lavafire" extends="lavafire_base">
  </Entity>

  <Entity name="snow" extends="snow_base">
    <Attributes>
      <Attribute name="particles_per_second" template="float" value="200"/>
    </Attributes>
  </Entity>

  <Entity name="fog" extends="fog_base">
  </Entity>
 
  <Entity name="lava" extends="lava_base">
  </Entity>

  <Entity name="environment" extends="environment_base">
  </Entity>

  <Entity name="lights" extends="lights_base">
    <Attributes>
      <Attribute name="sky_light_color" template="float3" value="0.8 1.6 2"/>
      <Attribute name="lava_light_color" template="float3" value="0.6 0.5 0.4"/>
      <Attribute name="spot_light_color" template="float3" value="1.85 1.85 1.85"/>
    </Attributes>
  </Entity>

  <Entity name="tonemapping" extends="tonemapping_base">
    <Attributes>
      <Attribute name="bloom_sensitivity" template="float3" value="0.25 0.0 0.0"/>
      <Attribute name="bloom_intensity" template="float3" value="1.3 0.9 0.0"/>
      <Attribute name="base_intensity" template="float3" value="0.87 0.8 1.0"/>
      <Attribute name="bloom_saturation" template="float3" value="0.5 0.8 1.0"/>
      <Attribute name="base_saturation" template="float3" value="1 0.5 1"/>
      <Attribute name="in1" template="float3" value="1 1.4 1"/>
      <Attribute name="out1" template="float3" value="1 1.1 1"/>
      <Attribute name="in2" template="float3" value="2 2.7 2"/>
      <Attribute name="out2" template="float3" value="2 5 2"/>
    </Attributes>
  </Entity>

  <Entity name="topoverlay" extends="topoverlay_base">
    <Attributes>
      <Attribute name="strength" template="float" value="0.5"/>
    </Attributes>
  </Entity>

</Level>