<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE Level SYSTEM "..\..\Common\Levels.dtd">
<Level>

  <Includes>
    <Include name="Level\Common\Constants.xml"/>
    <Include name="Level\Common\Templates.xml"/>
  </Includes>
  <!-- "unique" game entities -->

  <Entity name="sound" extends="sound_base">
  </Entity>
  
  <Entity name="lava" extends="lava_base">
    <Attributes>
      <Attribute name="firefractal_texture" template="string" value="Textures/Lava/firefractal_orange"/>
    </Attributes>
    <!-- don't mess with the lava, there is nothing to change here. -->
    <!-- if you know what you are doing, do it in the template. -->
  </Entity>
  <Entity name="cave" extends="cave_base">
    <!-- don't mess with the cave, there is nothing to change here. -->
    <!-- if you know what you are doing, do it in the template. -->
  </Entity>

  <!-- masses of game elements... -->
  
  <Entity name="island9" extends="island_base_grass1">
    <Attributes>
      <Attribute name="position" template="float3" value="0 360 -360"/>
      <Attribute name="direction" template="float3" value="0.7 0 0"/>
    </Attributes>
    <Properties>
      <Property name="controller" type="ProjectMagma.Simulation.IslandStraightMovementControllerProperty"/>
    </Properties>
  </Entity>


  <Entity name="island8" extends="island_base_grass1">
    <Attributes>
      <Attribute name="position" template="float3" value="-200 320 -320"/>
      <Attribute name="direction" template="float3" value="1.4 0 0"/>
    </Attributes>
    <Properties>
      <Property name="controller" type="ProjectMagma.Simulation.IslandStraightMovementControllerProperty"/>
    </Properties>
  </Entity>

  <Entity name="island1" extends="island_base_grass1">
    <Attributes>
      <Attribute name="position" template="float3" value="-250 280 -280"/>
      <Attribute name="direction" template="float3" value="0.6 0 0"/>
    </Attributes>
    <Properties>
      <Property name="controller" type="ProjectMagma.Simulation.IslandStraightMovementControllerProperty"/>
    </Properties>
  </Entity>

  <Entity name="island2" extends="island_base_grass1">
    <Attributes>
      <Attribute name="position" template="float3" value="200 240 -240"/>
      <Attribute name="direction" template="float3" value="0.5 0 0"/>
    </Attributes>
    <Properties>
      <Property name="controller" type="ProjectMagma.Simulation.IslandStraightMovementControllerProperty"/>
    </Properties>
  </Entity>

  <Entity name="island3" extends="island_base_grass1">
    <Attributes>
      <Attribute name="position" template="float3" value="0 200 -200"/>
