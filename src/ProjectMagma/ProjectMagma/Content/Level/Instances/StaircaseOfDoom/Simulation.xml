  <Entity name="island4" extends="island_base_grass1">
    <Attributes>
      <Attribute name="position" template="float3" value="100 160 -160"/>
      <Attribute name="direction" template="float3" value="1.3 0 0"/>
    </Attributes>
    <Properties>
      <Property name="controller" type="ProjectMagma.Simulation.IslandStraightMovementControllerProperty"/>
