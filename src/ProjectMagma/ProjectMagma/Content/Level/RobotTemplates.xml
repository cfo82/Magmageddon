<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE Level SYSTEM "Levels.dtd">
<Level>
  
  <Entity name="robot_base" abstract="true">
    <Attributes>
      <Attribute name="kind" template="string" value="player"/>
      <Attribute name="position" template="float3" value="0 0 0"/>
      <Attribute name="scale" template="float3" value="15 15 15"/>
      <Attribute name="bv_type" template="string" value="alignedbox3tree"/>
      <Attribute name="arrow_mesh" template="string" value="Models/Visualizations/arrow1"/>
      <Attribute name="alpha" template="float" value="1.0"/>
    </Attributes>
    <Properties>
      <Property name="collision" type="ProjectMagma.Simulation.Collision.CollisionProperty"/>
      <Property name="controller" type="ProjectMagma.Simulation.PlayerControllerProperty"/>
      <Property name="shadow_cast" type="ProjectMagma.Simulation.ShadowCastProperty"/>
      <Property name="render_highlight" type="ProjectMagma.Simulation.RenderHighlightProperty"/>
      <Property name="hud" type="ProjectMagma.Simulation.HUDProperty"/>
    </Properties>
  </Entity>

  <Entity name="green_snowman" extends="robot_base" abstract="true" >
    <Attributes>
      <Attribute name="mesh" template="string" value="Models/Primitives/player1_primitive"/>
      <Attribute name="diffuse_color" template="float3" value="0 1 0"/>
    </Attributes>
    <Properties>
      <Property name="render" type="ProjectMagma.Simulation.BasicRenderProperty"/>
    </Properties>
  </Entity>

  <Entity name="yellow_snowman" extends="robot_base" abstract="true" >
    <Attributes>
      <Attribute name="mesh" template="string" value="Models/Primitives/player2_primitive"/>
      <Attribute name="diffuse_color" template="float3" value="1 1 0"/>
    </Attributes>
    <Properties>
      <Property name="render" type="ProjectMagma.Simulation.BasicRenderProperty"/>
    </Properties>
  </Entity>

  <Entity name="blue_snowman" extends="robot_base" abstract="true" >
    <Attributes>
      <Attribute name="mesh" template="string" value="Models/Primitives/player2_primitive"/>
      <Attribute name="diffuse_color" template="float3" value="1 1 0"/>
    </Attributes>
    <Properties>
      <Property name="render" type="ProjectMagma.Simulation.BasicRenderProperty"/>
    </Properties>
  </Entity>

  <Entity name="purple_snowman" extends="robot_base" abstract="true" >
    <Attributes>
      <Attribute name="mesh" template="string" value="Models/Primitives/player2_primitive"/>
      <Attribute name="diffuse_color" template="float3" value="1 1 0"/>
    </Attributes>
    <Properties>
      <Property name="render" type="ProjectMagma.Simulation.BasicRenderProperty"/>
    </Properties>
  </Entity>
  
  <Entity name="green_animated_robot" extends="robot_base" abstract="true" >
    <Attributes>
      <Attribute name="mesh" template="string" value="Models/Player/RobBonesAnim"/>
      <Attribute name="arrow_mesh" template="string" value="Models/Visualizations/arrow1"/>
      <Attribute name="scale" template="float3" value="15 15 15"/>
      <Attribute name="diffuse_color" template="float3" value="0 0.7 0.2"/>
      <Attribute name="specular_power" template="float" value="50"/>
    </Attributes>
    <Properties>
      <Property name="render" type="ProjectMagma.Simulation.RobotRenderProperty"/>
    </Properties>
  </Entity>

  <Entity name="yellow_animated_robot" extends="robot_base" abstract="true" >
    <Attributes>
      <Attribute name="mesh" template="string" value="Models/Player/RobBonesAnim"/>
      <Attribute name="arrow_mesh" template="string" value="Models/Visualizations/arrow2"/>
      <Attribute name="scale" template="float3" value="15 15 15"/>
      <Attribute name="diffuse_color" template="float3" value="0.9 0.7 0"/>
      <Attribute name="specular_power" template="float" value="50"/>
    </Attributes>
    <Properties>
      <Property name="render" type="ProjectMagma.Simulation.RobotRenderProperty"/>
    </Properties>
  </Entity>
  
</Level>