  </Entity>

  <Entity name="powerup2" extends="powerup_energy">
    <Attributes>
      <Attribute name="island_reference" template="string" value="island2"/>
      <Attribute name="relative_position" template="float3" value="-20 10 -5"/>
    </Attributes>
  </Entity>

</Level>