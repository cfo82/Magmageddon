<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE Level SYSTEM "Levels.dtd">
<Level>

  <Includes>
    <Include name="Level\RobotTemplates.xml"/>
  </Includes>
  
  <!-- abstract game entities (templates) -->
  <Entity name="pillar_base" abstract="true">
    <Attributes>
      <Attribute name="kind" template="string" value="pillar"/>
      <Attribute name="position" template="float3" value="230 0 260"/>
      <Attribute name="scale" template="float3" value="200 200 200"/>
      <Attribute name="bv_type" template="string" value="alignedbox3tree"/>
      <Attribute name="texture" template="string" value="Textures/island_diffuse_v003"/>
      <Attribute name="lava_light_strength" template="float" value="0.7"/>
      <Attribute name="diffuse_color" template="float3" value="1.4 1.2 2.0"/>
      <Attribute name="specular_color" template="float3" value="0.05 0.05 0.05"/>
    </Attributes>
    <Properties>
      <Property name="collision" type="ProjectMagma.Simulation.Collision.CollisionProperty"/>
      <Property name="render" type="ProjectMagma.Simulation.TexturedRenderProperty"/>
      <Property name="render_highlight" type="ProjectMagma.Simulation.RenderHighlightProperty"/>
    </Properties>
  </Entity>

  <Entity name="pillar_base_001" extends="pillar_base" abstract="true">
    <Attributes>
      <Attribute name="mesh" template="string" value="Models/Pillars/pillar_001"/>
    </Attributes>
  </Entity>

  <Entity name="pillar_base_002" extends="pillar_base" abstract="true">
    <Attributes>
      <Attribute name="mesh" template="string" value="Models/Pillars/pillar_002"/>
    </Attributes>
  </Entity>

  <Entity name="pillar_base_003" extends="pillar_base" abstract="true">
    <Attributes>
      <Attribute name="mesh" template="string" value="Models/Pillars/pillar_003"/>
    </Attributes>
  </Entity>

  <Entity name="island_base" abstract="true">
    <Attributes>
      <Attribute name="kind" template="string" value="island"/>
      <Attribute name="position" template="float3" value="60 160 -30"/>
      <Attribute name="scale" template="float3" value="70 70 70"/>
      <Attribute name="velocity" template="float3" value="0 0 0"/>
      <Attribute name="acceleration" template="float3" value="0 0 0"/>
      <Attribute name="texture" template="string" value="Textures/island_diffuse_v003"/>
      <Attribute name="bv_type" template="string" value="alignedbox3tree"/>
    </Attributes>
    <Properties>
      <Property name="collision" type="ProjectMagma.Simulation.Collision.CollisionProperty"/>
      <Property name="controller" type="ProjectMagma.Simulation.IslandCircualarMovementControllerProperty"/>
      <Property name="death" type="ProjectMagma.Simulation.DeathProperty"/>
      <Property name="shadow_cast" type="ProjectMagma.Simulation.ShadowCastProperty"/>
      <Property name="render" type="ProjectMagma.Simulation.IslandRenderProperty"/>
      <!--Property name="render" type="ProjectMagma.Simulation.BasicRenderProperty"/-->
      <Property name="render_highlight" type="ProjectMagma.Simulation.RenderHighlightProperty"/>
    </Properties>
  </Entity>

  <Entity name="island_base_burnt" extends="island_base" abstract="true">
    <Attributes>
      <Attribute name="mesh" template="string" value="Models/Islands/bIsland_TypeA_001"/>
      <Attribute name="wind_strength" template="float" value="0.0"/>
    </Attributes>
  </Entity>

  <Entity name="island_base_grass" extends="island_base" abstract="true">
    <Attributes>
      <Attribute name="mesh" template="string" value="Models/Islands/gIsland_TypeA_001"/>
      <Attribute name="wind_strength" template="float" value="0.015"/>
    </Attributes>
  </Entity>

  <Entity name="island_base_ice" extends="island_base" abstract="true">
    <Attributes>
      <Attribute name="mesh" template="string" value="Models/Islands/iIsland_TypeA_001"/>
      <Attribute name="wind_strength" template="float" value="0.0"/>
    </Attributes>
  </Entity>

  <Entity name="powerup_base" abstract="true">
    <Attributes>
      <Attribute name="kind" template="string" value="powerup"/>
      <Attribute name="position" template="float3" value="0 0 0"/>
      <Attribute name="mesh" template="string" value="Models/Primitives/powerup"/>
      <Attribute name="scale" template="float3" value="8 8 8"/>
      <Attribute name="relative_position" template="float3" value="15 0 15"/>
      <Attribute name="power" template="string" value="energy"/>
      <Attribute name="powerValue" template="int" value="100"/>
      <Attribute name="pickup_sound" template="string" value="excellent"/>
      <Attribute name="bv_type" template="string" value="sphere"/>
      <Attribute name="diffuse_color" template="float3" value="1.0 1.0 1.0"/>
      <Attribute name="emissive_color" template="float3" value="0.2 0.2 0.2"/>
    </Attributes>
    <Properties>
      <Property name="collision" type="ProjectMagma.Simulation.Collision.CollisionProperty"/>
      <Property name="controller" type="ProjectMagma.Simulation.PowerUpController"/>
      <Property name="shadow_cast" type="ProjectMagma.Simulation.ShadowCastProperty"/>
      <Property name="render" type="ProjectMagma.Simulation.BasicRenderProperty"/>
      <Property name="render_highlight" type="ProjectMagma.Simulation.RenderHighlightProperty"/>
    </Properties>
  </Entity>
</Level>